rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User-specific data - users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Global questions collection - read-only for authenticated users
    // Only admins can write (implement admin check via custom claims if needed)
    match /questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only - implement via Cloud Functions
    }
    
    // Global leaderboards - read-only for authenticated users
    // Updated via Cloud Functions or server-side logic
    match /leaderboards/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }
    
    // Achievements definitions - read-only for all authenticated users
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
